    <dimen name="feather_crop_button_text_size">11sp</dimen>

    <integer name="feather_crop_button_text_style">0</integer>

    <!-- aspect ratio display names -->
    <!-- note that the corresponding ratio value is defined in the -->
    <!-- "crop_values" array and it also must contains the same number of entries -->
    <string-array name="feather_crop_names">
        <item>original</item>
        <item>square</item>
        <item>custom</item>
        <item>3:2</item>
        <item>3:5</item>
        <item>4:3</item>
        <item>4:6</item>
        <item>5:7</item>
        <item>8:10</item>
        <item>16:9</item>
    </string-array>

    <!-- define the 'ratio' value of the 'crop_names' array -->
    <!-- ratio is defined by 'aspectX:aspectY', so the final apsect -->
    <!-- ratio will be defined as aspectX/aspectY -->
    <!-- only integer values allowed here -->
    <!-- value '0' means not aspect ratio at all, so user will be free to change the crop rectangle without restrictions -->
    <!-- value '-1' means use the same aspect(X or Y) of the original image -->
    <string-array name="feather_crop_values">
        <item>-1:-1</item>
        <item>1:1</item>
        <item>0:0</item>
        <item>3:2</item>
        <item>3:5</item>
        <item>4:3</item>
        <item>4:6</item>
        <item>5:7</item>
        <item>8:10</item>
        <item>16:9</item>
    </string-array>

