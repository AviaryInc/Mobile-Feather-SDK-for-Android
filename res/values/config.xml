    <!-- CROP TOOL -->
    <!-- min size of the crop area -->
    <integer name="feather_crop_min_size">100</integer>
    <!-- allow click on the current crop area to flip w/h -->
    <integer name="feather_crop_allow_inverse">0</integer>
