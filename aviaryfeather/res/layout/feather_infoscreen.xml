<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="gone" >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/feather_infoscreen_background"
        android:padding="20dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/aviary_logo_big" />

            <TextView
                android:id="@+id/version_text"
                style="@style/FeatherInfoScreen.Version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:shadowColor="#FFFFFFFF"
                android:shadowDx="0.0"
                android:shadowDy="1.0"
                android:shadowRadius="0.5"
                android:text="@string/infoscreen_text"
                android:textColor="#FF858889"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/aviary_infoscreen_submit"
                style="@style/FeatherTool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/infoscreen_submit" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>